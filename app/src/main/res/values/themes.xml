<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Vigia" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brandPrimary</item>
        <item name="colorOnPrimary">@color/textInverse</item>

        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="android:textColor">@color/textPrimary</item>

        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Vigia" parent="Base.Theme.Vigia" />

    <style name="Widget.Vigia.Card.Large" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">12dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">20dp</item>

        <item name="cardBackgroundColor">@color/colorSurface</item>

        <item name="android:outlineAmbientShadowColor" tools:targetApi="28">#33000000</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="28">#33000000</item>
    </style>

    <style name="Widget.Vigia.SearchBar" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_search_pill</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:hint">Search...</item>

        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>